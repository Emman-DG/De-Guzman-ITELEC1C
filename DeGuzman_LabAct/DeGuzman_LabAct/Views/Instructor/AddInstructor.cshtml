@{
    ViewData["Title"] = "Add Instructor";
}
@model Instructor
<h3>Add Instructor</h3>

<form asp-action="AddInstructor">
    <div class="row mb-3">
        <div class="col">
            <label asp-for="FName" class="form-label">First Name</label>
            <input asp-for="FName" type="text" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="LName" class="form-label">Last Name</label>
            <input asp-for="LName" type="text" class="form-control" />
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="IsTenured" class="form-label">Tenured</label>
        <input asp-for="IsTenured"/>
    </div>
    <div class="mb-3">
        <label asp-for="Rank" class="form-label">Rank</label>
        <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))" class="form-control"></select>
    </div>
    <div class="mb-3">
        <label asp-for="HiringDate" class="form-label">Hiring Date</label>
        <input asp-for="HiringDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

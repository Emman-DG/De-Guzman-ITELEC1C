
@model IEnumerable<Instructor>;
@{
    
}
<div>Instructor List</div>

<br />
<a class="btn btn-primary" asp-area="" asp-controller="Instructor" asp-action="AddInstructor">Add Instructor</a>
<br />
<br />

<table  class="table table-dark">
            
        <tr>
            <th colspan="8">Instructor</th>
        </tr>

        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Tenured</td>
            <td>Rank</td>
            <td>Hiring Date</td>
            <td>Show Details</td>
            <td>Edit</td>
            <td>Delete</td>
            
        </tr>
    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.Id</td>
            <td>@instructor.FName @instructor.LName</td>
            <td>@(instructor.IsTenured ? "Permanent" : "Probationary")</td>
            <td>@instructor.Rank</td>
            <td>@instructor.HiringDate</td>
            <td><a asp-action="ShowDetail" class="btn btn-primary" asp-route-id="@instructor.Id">Show Details</a></td>
            <td><a asp-action="EditInstructor" class="btn btn-primary" asp-route-id="@instructor.Id">Edit</a></td>
            <td><a asp-action="DeleteInstructor" class="btn btn-danger" asp-route-id="@instructor.Id">Delete</a></td>
        </tr>
    }
</table>

@model Instructor;

@{
    var tenured = Model.IsTenured ? "Permanent" : "Probationary";
}

<h1>Instructor Details</h1>

<table class="table table-dark">
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td>@Model.LName</td>
    </tr>
    <tr>
        <th>First Name</th>
        <td>@Model.FName</td>
    </tr>
    <tr>
        <th>Rank</th>
        <td>@Model.Rank</td>
    </tr>
    <tr>
        <th>Hiring Date</th>
        <td>@Model.HiringDate</td>
    </tr>
    <tr>
        <th>Tenured</th>
        <td>@Model.IsTenured</td>
    </tr>
</table>
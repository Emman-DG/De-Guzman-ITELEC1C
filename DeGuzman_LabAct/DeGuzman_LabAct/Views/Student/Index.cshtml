
@model IEnumerable<Student>;

<div>Student List</div>
<br />
<a class="btn btn-primary" asp-area="" asp-controller="Student" asp-action="AddStudent">Add Student</a>
<br/>
<br />

<table  class="table table-dark">
            
        <tr>
            <th colspan="8">Student</th>
        </tr>

        <tr>
            <td>Name</td>
            <td>Course</td>
            <td>Admission Date</td>
            <td>Email</td>
            <td>GPA</td>
            <td>Show Details</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.FirstName @student.LastName</td>
            <td>@student.Course</td>
            <td>@student.AdmissionDate</td>
            <td>@student.Email</td>
            <td>@student.GPA</td>
            <td><a asp-action="ShowDetail" class="btn btn-primary" asp-route-id="@student.Id">Show Details</a></td>
            <td><a asp-action="EditStudent" class="btn btn-primary" asp-route-id="@student.Id">Edit</a></td>
            <td><a asp-action="DeleteStudent" class="btn btn-danger" asp-route-id="@student.Id">Delete</a></td>
        </tr>
    }
</table>
